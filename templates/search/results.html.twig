{% extends 'base.html.twig' %}

{% block title %}MyArtem{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Résultats de votre recherche</h1>
        <p style="font-style: italic">(Étudiant) "{{ search }}" - <a href="{{ path('app_search') }}" style="font-style: normal">Modifier</a></p>

        {% if students is empty %}
            <p>Aucun résultat trouvé.</p>
        {% else %}
            <ul>
                {% for student in students %}
                    <li><a href="{{ path('app_student', {'slug': student.slug}) }}">{{ student.firstName }} {{ student.lastName }}</a></li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
{% endblock %}
